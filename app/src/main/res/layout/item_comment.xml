<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/c_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/c_text"
        android:layout_width="0sp"
        android:layout_height="30sp"
        android:layout_weight="1"
        android:hint="@string/comment"
        app:layout_constraintBottom_toBottomOf="@id/c_image"
        app:layout_constraintEnd_toStartOf="@id/c_button"
        app:layout_constraintStart_toEndOf="@id/c_image"
        app:layout_constraintTop_toTopOf="@id/c_image"
        android:textColor="@color/colorBlack02"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/c_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_button"
        app:layout_constraintBottom_toBottomOf="@id/c_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/c_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/c_button" />
</androidx.constraintlayout.widget.ConstraintLayout>